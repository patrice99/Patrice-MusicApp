<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvInstruments"
        android:layout_alignEnd="@+id/tvInstruments"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/ivProfilePic"
        android:textAlignment="textEnd"
        android:textColor="#2196F3"
        tools:text="Seattle, Washington" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@android:color/white"/>

    <ImageView
        android:id="@+id/ivProfilePic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/toolbar_profile"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="0dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_profile"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="16dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        tools:text="Patrice Gill" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivProfilePic"
        android:layout_alignEnd="@+id/ivProfilePic"
        android:layout_alignParentStart="true"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        tools:text="3cmel" />

    <TextView
        android:id="@+id/tvBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:layout_toEndOf="@+id/ivProfilePic"
        android:textAlignment="textStart"
        android:textSize="16sp"
        tools:text="Here is my bio, I would probably look a little about myself here" />

    <TextView
        android:id="@+id/tvGenres"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvBio"
        android:layout_alignStart="@+id/tvBio"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="textEnd"
        android:textSize="15sp"
        tools:text="Genres: RnB , Pop, Reggae, Soca" />

    <TextView
        android:id="@+id/tvInstruments"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvGenres"
        android:layout_alignStart="@+id/tvGenres"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:textAlignment="textEnd"
        tools:text="Piano, Organ, Flute" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProfilePosts"
        android:layout_width="match_parent"
        android:layout_height="462dp"
        android:layout_below="@+id/btnEditProfile"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp" />

    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="266dp"
        android:layout_height="38dp"
        android:layout_below="@+id/tvLocation"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/ivProfilePic"
        android:backgroundTint="#FFFFFF"
        android:text="@string/edit_profile"
        android:textAllCaps="false"
        android:textColor="#000000" />

</RelativeLayout>

